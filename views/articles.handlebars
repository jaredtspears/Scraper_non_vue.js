<div class="container">
    {{!-- this is the key i need on the object in routes --}}
    {{#each article}}
      <!-- created a simpled colored container for the articles -->
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    {{!-- calling in the title scrapped --}}
                    <span class="card-title">{{this.title}}</span>
                    {{!-- summary scrapped --}}
                    <p>{{this.summary}}</p>
                </div>
                <div class="card-action">
                    <a href="{{this.link}}">veiw Article</a>
                    {{!-- button for saved or save --}}
                   <div class="col-lg-4 align-self-end text-right">
                    {{#if saved}}
                        <button class="btn btn-secondary m-2 disabled">Article Saved</button>
                    {{else}}
                        <button class="btn btn-success m-2 btn-save" data-id="{{this._id}}">Save Article</button>
                    {{/if}}
                </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>